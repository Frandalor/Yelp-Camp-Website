<% layout('layouts/boilerplate') %>
<div class="row mb-5">
  <div class="col-6 offset-3">
    <div class="card">
      <img src="<%= campground.image %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title  %></h5>
        <p class="card-text"><%= campground.description  %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item">$<%= campground.price %>/night</li>
      </ul>
      <div class="card-body row">
        <a href="/campgrounds/<%= campground._id %>/edit" class="card-link col-4 btn btn-warning">Edit</a>
        <form class="d-inline col-4 " action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger col-12 text-nowrap ">Delete</button>
        </form>
        <a href="/campgrounds" class="card-link btn btn-success col-4">Back</a>
      </div>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
  </div>
</div>