<% layout('layouts/boilerplate') %>
<div id="cluster-map" style="width: 100%; height: 500px;"></div>
<h1>All Campgrounds</h1>
<div>       
         <a href="/campgrounds/new">Add new Camp</a>
</div>  
 <ul>        
        <% for (let campground of campgrounds)  { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.image.length) {%>
                        <img crossorigin="anonymous" src="<%= campground.image[0].url %>" alt="" class="img-fluid">
                        <% } else { %>
                        <img crossorigin="anonymous" src="https://res.cloudinary.com/deawyqfb9/image/upload/v1757423124/YelpCamp/ckmbhcigtahtrsungdqt.jpg" alt="" class="img-fluid">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="text-muted"><%= campground.location %></p>
                            <p class="card-title"><%= campground.price %> $</p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

                <script> 
                    const maptilerApiKey = '<%-process.env.MAPTILER_API_KEY %>';
                    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
                </script>

            <script crossorigin="anonymous" src="/javascripts/clusterMap.js">
            </script>